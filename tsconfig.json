{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "allowJs": false,
    "declaration": true,
    "outDir": "dist",
    "experimentalDecorators": true,
    "lib": ["es2015", "es2016", "es2017", "dom"],
    "module": "es6",
    "moduleResolution": "node",
    "target": "es5",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "jsx": "react",
    "jsxFactory": "h"
  },
  "include": [
    "src",
    "types/jsx.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
